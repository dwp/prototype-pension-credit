
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Do you or your partner have money in any of these?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <form method="post" >

        <div class="govuk-form-group govuk-!-padding-top-7">
        <fieldset class="govuk-fieldset" aria-describedby="countries-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
                {{pageName}}
            </h1>
            </legend>
            <div class="govuk-hint">
                Select all options that you have money in.
            </div>

            <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes" name="capitalTypes" type="checkbox" value="bank and building society accounts">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes">
                    Bank or building society accounts<br>
                    <span class="govuk-hint">Such as current accounts, savings accounts, deposit accounts or ISAs.</span>
                    </label>
                </div>

<div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-1" name="capitalTypes" type="checkbox" value="credit union and Post Office accounts">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-1">
                    Credit union or Post Office accounts

                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-4" name="capitalTypes" type="checkbox" value="cash at home">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-4">
                    Cash at home or somewhere else<br>
                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-3" name="capitalTypes" type="checkbox" value="Premium Bonds or other National Savings and Investment products">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-3">
                Premium Bonds or other National Savings and Investment products<br>
                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-5" name="capitalTypes" type="checkbox" value="income bonds or capital bonds">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-5">
                  Income bonds or capital bonds
                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-7" name="capitalTypes" type="checkbox" value="cash, investments and accounts outside the UK">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-7">
                    Outside the UK in cash, investments or accounts <br>
                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-2" name="capitalTypes" type="checkbox" value="shares">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-2">
                    Shares
                    </label>
                </div>
                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-6" name="capitalTypes" type="checkbox" value="unit trusts">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-6">
                    Unit trusts
                    </label>
                </div>


                <div class="govuk-checkboxes__divider">or</div>

                <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="capitalTypes-none" name="capitalTypes" type="checkbox" value="none" data-behaviour="exclusive">
                    <label class="govuk-label govuk-checkboxes__label" for="capitalTypes-none">
                    None of these
                    </label>
                </div>
            </div>
        </fieldset>
        </div>

        <button type="submit" class="govuk-button" data-module="govuk-button">
            Continue
        </button>

        </form>

    </div>
</div>

{% endblock %}
