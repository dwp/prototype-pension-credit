{# Set which global nav link to highlight #}
{% set globalNavSection = 'find-someone' %}

{% extends "./layout.njk" %}

{% block content %}



<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    
     {{ govukRadios({
          classes: "",
          idPrefix: "qd-start",
          name: "qd-start",
          fieldset: {
            legend: {
              text: "Type of enquiry",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          hint: {
            text: ""
          },
          items: [
            {
              value: "record",
              text: "Answer a call about an award decision",
              checked: (data["qd-start"] == "record")
            },
            {
              value: "help",
              text: "Answer a call about other help available",
              checked: (data["qd-start"] == "help")
            },
            {
              divider: "or"
            },
            {
              value: "admin",
              text: "Access a claim without taking a call",
              checked: (data["qd-start"] == "admin")
            }
          ]
        }) }}




        <div class="govuk-button-group">
          {{ govukButton({
          text: "Continue"
          }) }}
        <a class="govuk-link" href="home-user-0">Cancel</a>
        </div>



    
  </div>
</div>

{% endblock %}
