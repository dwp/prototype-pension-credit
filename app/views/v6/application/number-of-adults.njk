
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Does anyone else who is over 18 live with you?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        
        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

   

        


        <form method="post" >
            <div class="govuk-form-group govuk-!-padding-top-7">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    Does anyone else who is over 18 live with you?
                </h1>
                </legend>

                <div class="govuk-body">
                    Their employment status and income might affect how much Pension Credit you could get.
                </div>
                
                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="ExtraAdults" name="ExtraAdults" type="radio" value="Yes, one person">
                    <label class="govuk-label govuk-radios__label" for="ExtraAdults">
                    Yes, one person
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="ExtraAdults-2" name="ExtraAdults" type="radio" value="Yes, more than one person">
                    <label class="govuk-label govuk-radios__label" for="ExtraAdults-2">
                    Yes, more than one person
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="ExtraAdults-3" name="ExtraAdults" type="radio" value="No">
                    <label class="govuk-label govuk-radios__label" for="ExtraAdults-3">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>
        

</div>
</div>

{% endblock %}
