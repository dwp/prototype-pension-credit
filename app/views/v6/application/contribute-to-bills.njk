{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">


    <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>


    <form method="post" >
            <div class="govuk-form-group govuk-body govuk-!-margin-top-9">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                  <span class="govuk-caption-l">About {{ data['currentName'] }} </span>
                    Who pays your household bills?
                </h1>
                </legend>
                <div id="DoB-hint" class="govuk-hint">
                  This includes rent, mortgage, phone, broadband, TV, water, gas, electricity and other fixed costs.
                </div>
                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="contribute" name="contribute" type="radio" value="Me">
                    <label class="govuk-label govuk-radios__label" for="contribute">
                    Me
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="contribute-2" name="contribute" type="radio" value="Them">
                    <label class="govuk-label govuk-radios__label" for="contribute-2">
                    Them
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="contribute-2" name="contribute" type="radio" value="Both of us">
                    <label class="govuk-label govuk-radios__label" for="contribute-2">
                    Both of us
                    </label>
                </div>

                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>



  </div>
</div>

{% endblock %}
