{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Bank details" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <form method="post">
            <div class="govuk-form-group">
              <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                  <h2 class="govuk-fieldset__heading">
                      Have you made a decision about this claimants award?
                  </h2>
                </legend>
                <div class="govuk-radios" data-module="govuk-radios">
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="decisionType" name="decisionType" type="radio" value="award">
                      <label class="govuk-label govuk-radios__label" for="decisionType">
                      Yes, they are entitled to Pension Credit
                      </label>
                  </div>
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="decisionType-2" name="decisionType" type="radio" value="nil">
                      <label class="govuk-label govuk-radios__label" for="decisionType-2">
                      Yes, they are not entitled to Pension Credit
                      </label>
                  </div>
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="decisionType-3" name="decisionType" type="radio" value="no">
                      <label class="govuk-label govuk-radios__label" for="decisionType-3">
                      No
                      </label>
                  </div>
                </div>
              </fieldset>
            </div>
            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
