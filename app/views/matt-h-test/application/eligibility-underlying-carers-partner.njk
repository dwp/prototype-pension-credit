
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Do you have any money from working?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">


        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <form method="post" >
            <div class="govuk-form-group govuk-!-padding-top-7">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                {% if data['hasPartner']%}
                    Have you partner ever applied for Carer's Allowance in the past?
                {% else %}
                    Have you ever applied for Carer's Allowance in the past?
                {% endif %}
                </h1>
                </legend>
                

                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="hasCarersUnderlyingEntitlement" name="hasCarersUnderlyingEntitlementPartner" type="radio" value="Yes">
                    <label class="govuk-label govuk-radios__label" for="hasCarersUnderlyingEntitlement">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="hasCarersUnderlyingEntitlement-2" name="hasCarersUnderlyingEntitlementPartner" type="radio" value="No, I've never applied for Carer's Allowance">
                    <label class="govuk-label govuk-radios__label" for="hasCarersUnderlyingEntitlement-2">
                    No, I've never applied for Carer's Allowance
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="hasCarersUnderlyingEntitlement-3" name="hasCarersUnderlyingEntitlementPartner" type="radio" value="I'm not sure">
                    <label class="govuk-label govuk-radios__label" for="hasCarersUnderlyingEntitlement-3">
                    I'm not sure
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
