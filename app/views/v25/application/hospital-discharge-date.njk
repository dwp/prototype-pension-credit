
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "About your discharge from hospital" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">


        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <h1 class="govuk-heading-l">About your discharge from hospital</h1>

        <form method="post">

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="passport-issued-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    <h2 class="govuk-fieldset__heading">
                        <span class="govuk-caption-l">About time you have spent in hospital</span>
                        What is your expected date of discharge?
                    </h2>
                     </legend>
                     <p class="govuk-body">If you do not leave hospital on this date you must tell us.</p>


                    <div class="govuk-date-input">
                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="hospitalOut-day">
                            Day
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="hospitalOut-day" name="hospitalOut-day" type="text" inputmode="numeric">
                        </div>
                    </div>
                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="hospitalOut-month">
                            Month
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="hospitalOut-month" name="hospitalOut-month" type="text" inputmode="numeric">
                        </div>
                    </div>
                    <div class="govuk-date-input__item">
                        <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="hospitalOut-year">
                            Year
                        </label>
                        <input class="govuk-input govuk-date-input__input govuk-input--width-4" id="hospitalOut-year" name="hospitalOut-year" type="text" inputmode="numeric">
                        </div>
                    </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                    <h1 class="govuk-fieldset__heading">
                        Where are you being discharged to?
                    </h1>
                    </legend>

                    <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="hospitalDischargeLocation" name="hospitalDischargeLocation" type="radio" value="A care home">
                            <label class="govuk-label govuk-radios__label" for="hospitalDischargeLocation">
                            A care home
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="hospitalDischargeLocation-2" name="hospitalDischargeLocation" type="radio" value="A community hospital">
                            <label class="govuk-label govuk-radios__label" for="hospitalDischargeLocation-2">
                            A community hospital
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="hospitalDischargeLocation-3" name="hospitalDischargeLocation" type="radio" value="My own home">
                            <label class="govuk-label govuk-radios__label" for="hospitalDischargeLocation-3">
                            My own home
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="hospitalDischargeLocation-4" name="hospitalDischargeLocation" type="radio" value="Somewhere else">
                            <label class="govuk-label govuk-radios__label" for="hospitalDischargeLocation-4">
                            Somewhere else
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>


            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
