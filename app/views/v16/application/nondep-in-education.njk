

{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Are they in education?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">


    <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>


    <form method="post" >
            <div class="govuk-form-group govuk-body govuk-!-margin-top-9">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

                <h1 class="govuk-fieldset__heading">
                  <span class="govuk-caption-l">About {{ data['currentName'] }} </span>

                    Are they in education?
                </h1>
                </legend>


                <div class="govuk-radios govuk-radios-" data-module="govuk-radios">

                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="inEducation-1" name="inEducation" type="radio" value="Yes, full time">
                      <label class="govuk-label govuk-radios__label" for="inEducation-1">
                        Yes, full time
                      </label>
                  </div>
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="inEducation-2" name="inEducation" type="radio" value="Yes, part time">
                      <label class="govuk-label govuk-radios__label" for="inEducation-2">
                        Yes, part time
                      </label>
                  </div>
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="inEducation-3" name="inEducation" type="radio" value="No">
                      <label class="govuk-label govuk-radios__label" for="inEducation-3">
                      No
                      </label>
                  </div>

                </div>


            </fieldset>
            </div>
            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>



  </div>
</div>

{% endblock %}
