{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Personal details" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <h2 class="govuk-heading-l">Partner's nationality</h2>

        <div class="govuk-body">
            CheckÂ the nationality of the claimant's partner in Searchlight.
        </div>
        <h3 class="govuk-heading-m">Partner's details</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Name
            </dt>
            <dd class="govuk-summary-list__value">
              Sally Horton
            </dd>
          </div>
           <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              National Insurance number
            </dt>
            <dd class="govuk-summary-list__value">
              QQ 12 34 56 B
            </dd>
          </div>
          
  
        </dl>

        

        <form method="post">
            <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">

            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h2 class="govuk-fieldset__heading">
                What is their nationality as shown in searchlight?
              </h2>
            </legend>


            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="nationalityCheckPartner" name="nationalityCheckPartner" type="radio" value="British"
                  {% if data['nationalityCheckPartner'] == 'British' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="nationalityCheckPartner">
                  British
                </label>
              </div>
              
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="nationalityCheckPartner2" name="nationalityCheckPartner" type="radio" value="Irish"
                  {% if data['nationalityCheckPartner'] == 'Irish' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="nationalityCheckPartner2">
                  Irish
                </label>
              </div>
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="nationalityCheckPartner3" name="nationalityCheckPartner" type="radio" value="Something else"
                  {% if data['nationalityCheckPartner'] == 'Something else' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="nationalityCheckPartner3">
                  Something else
                </label>
              </div>
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="nationalityCheckPartner4" name="nationalityCheckPartner" type="radio" value="No nationality"
                  {% if data['nationalityCheckPartner'] == 'No nationality' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="nationalityCheckPartner">
                  No nationality
                </label>
              </div>
              
          </fieldset>
        </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
