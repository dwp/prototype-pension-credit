{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Personal details" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <h2 class="govuk-heading-l">Partner's immigration status</h2>

        <div class="govuk-body">
             Use the Home Office data in Searchlight to check the immigration status of the claimaint's partner.
        </div>


        <h3 class="govuk-heading-m">Partner details</h2>

        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Name
            </dt>
            <dd class="govuk-summary-list__value">
              Sally Horton
            </dd>
          </div>
           <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              National Insurance number
            </dt>
            <dd class="govuk-summary-list__value">
              QQ 12 34 56 B
            </dd>
          </div>
        </dl>

        

        <form method="post">
              <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                <h1 class="govuk-fieldset__heading">
                    Do they have indefinite leave to remain?
                </h1>
                </legend>

                <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="leaveToRemainPartner" name="leaveToRemainPartner" type="radio" value="yes"
                    {%if data['leaveToRemainPartner']=="yes"%}checked="checked"{%endif%}
                    >
                    <label class="govuk-label govuk-radios__label" for="leaveToRemainPartner">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="leaveToRemainPartner-2" name="leaveToRemainPartner" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="leaveToRemainPartner-2">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>
            <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                <h1 class="govuk-fieldset__heading">
                    Do they have recourse to public funds?
                </h1>
                </legend>

                <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="recourseToPublicFundsPartner" name="recourseToPublicFundsPartner" type="radio" value="yes"
                    {%if data['recourseToPublicFundsPartner']=="yes"%}checked="checked"{%endif%}
                    >
                    <label class="govuk-label govuk-radios__label" for="recourseToPublicFundsPartner">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="recourseToPublicFundsPartner-2" name="recourseToPublicFundsPartner" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="recourseToPublicFundsPartner-2">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
