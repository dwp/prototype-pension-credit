{% from "timeline/macro.njk" import dwpTimeline %}

{# Set which global nav link to highlight #}
{% set globalNavSection = 'find-someone' %}

{# Set which primary nav tab to highlight #}
{% set primaryNavSection = 'award' %}

{% extends "./layout.njk" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    {% include './partials/name/TS3.njk' %}


    {% include './partials/tabs.njk' %}

      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m">Pension Credit decisions</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Decision date</th>
            <th scope="col" class="govuk-table__header"><span class="govuk-visually-hidden">Action</span></th>
            <th scope="col" class="govuk-table__header">Status</th>
          </tr>
        </thead>
        <tbody>
          <tr class="govuk-table__row">
            <th scope="row" class="govuk-table__header">
              {% if data['scenario'] == 'T2' %}
                21 December 2023
              {% elif data['scenario'] == 'T21' %}
                22 December 2023
              {% elif data['scenario'] == 'T3' %}
                28 December 2023
              {% else %}
                2 January 2023
              {% endif %}
              
            </th>
            <td class="govuk-table__cell"><a href="award-detail">View calculation</a></td>
              {% if data['T1_MR'] or data['T2_Explained'] or data['T3_MR']%}
              <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--yellow">
                REVIEW
              {%else%}
              <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--grey">

                Closed
              {%endif%}

            </strong>
          </tr>
        </tbody>
      </table>

  </div>

</div>

{% endblock %}
