                    <input class="govuk-radios__input" id="BankDetails" name="BankEncashed" type="radio" value="yes"}>
                    <label class="govuk-label govuk-radios__label" for="BankDetails">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="BankDetails-2" name="BankEncashed" type="radio" value="no">
                    <label class="govuk-label govuk-radios__label" for="BankDetails-2">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
