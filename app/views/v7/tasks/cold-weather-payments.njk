{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Process application" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <h2 class="govuk-heading-l">Cold Weather Payments</h2>

        <div class="govuk-body">
          Check if the claimant should get any Cold Weather Payments since {{data['backdatingDate']}}.
        </div>

        <div class="govuk-group">
          <dl class="govuk-summary-list govuk-!-margin-bottom-7">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
            Postcode
              </dt>
              <dd class="govuk-summary-list__value">
                PR2
              </dd>
            </div>
        </div>

        <form method="post">
            <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                <h1 class="govuk-fieldset__heading">
                    Should the claimant get any Cold Weather Payments?
                </h1>
                    </legend>
                <div id="signIn-hint" class="govuk-hint">
                  UseÂ <a href="https://cwp.agent-service.prod.rbcdwp.net/check-cold-weather-payments/citizen-location" target="_blank">Check Cold Weather Payments</a>
                </div>


                <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="ColdWeather" name="ColdWeather" type="radio" value="yes"
                    {%if data['ColdWeather']=="yes"%}checked="checked"{%endif%}>
                    <label class="govuk-label govuk-radios__label" for="BankDetails">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="ColdWeather-2" name="ColdWeather" type="radio" value="no"
                    {%if data['ColdWeather']=="no"%}checked="checked"{%endif%}>
                    <label class="govuk-label govuk-radios__label" for="BaColdWeathernkDetails-2">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
