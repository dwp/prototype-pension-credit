
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "What is your nationality?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">


        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>






        <form method="post">
            <div class="govuk-form-group govuk-!-padding-top-7">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    What is your nationality?
                </h1>
                <div class="govuk-hint govuk-!-margin-top-3">
          Select the nationality that is on your passport or travel document.</div>

                </legend>

                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="passport" name="passport" type="radio" value="British">
                    <label class="govuk-label govuk-radios__label" for="passport">
                    British
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="passport" name="passport" type="radio" value="Irish">
                    <label class="govuk-label govuk-radios__label" for="passport">
                    Irish
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="passport" name="passport" type="radio" value="EEA">
                    <label class="govuk-label govuk-radios__label" for="passport">
                    European Economic area (EEA) or Swiss national
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="passport" name="passport" type="radio" value="Other">
                    <label class="govuk-label govuk-radios__label" for="passport">
                    Something else
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
