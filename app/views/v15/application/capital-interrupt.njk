
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Your money" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">

        <p class="govuk-!-padding-bottom-7"><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

      <div {%if data['route']==2%}class="interruption-card"{%endif%}>
        <h1 class="govuk-heading-l {%if data['route']==2%}interruption-card__heading{%endif%}">
          Your money
        </h1>
        <div class="govuk-form-group">
          <p class="govuk-body {%if data['route']==2%}interruption-card__body{%endif%}">
            So we pay you right amount of Pension Credit, we need to know how much money you have in:
          </p>
           <ul class="govuk-list govuk-list--bullet {%if data['route']==2%}interruption-card__body{%endif%}">
              {% for item in data['capitalTypes'] %}
              <li>{{ item }}</li>
              {% endfor %}
          </ul>
          <p class="govuk-body {%if data['route']==2%}interruption-card__body{%endif%}">
            We will ask you:
          </p>
           <ul class="govuk-list govuk-list--bullet {%if data['route']==2%}interruption-card__body{%endif%}">
              <li>how much money you have today</li>
              <li>how much money you had on {{data['backdateDateString']}}</li>
          </ul>
        </div>
        <a href="capital-total-today" class="govuk-button {%if data['route']==2%}govuk-button--secondary{%endif%}">Continue</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
