

{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Check your overnight stay in hospital" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row ">
      <div class="govuk-grid-column-two-thirds">
       <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <h1 class="govuk-heading-l">Check your shares in {{ data['shareCompany'] }}</h1>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">


          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Which company do you have shares in?
            </dt>
            <dd class="govuk-summary-list__value">
              {{data['shareCompany']}}
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> share company</span></a>
            </dd>
          </div>


          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              How many shares do you have?
            </dt>
            <dd class="govuk-summary-list__value">
              {{data['sharesNumber']}}
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> number of shares</span></a>
            </dd>
          </div>

          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              Were all of these shares issued to you before {{data['backdateDateString']}}?
            </dt>
            <dd class="govuk-summary-list__value">
              {{data['sharesIssuedPrebackdating']}}
            </dd>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> something</span></a>
            </dd>
          </div>


          {% if data['sharesIssuedDate'] %}

              <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    What date were you last issued shares in {{ data['shareCompany'] }}?
                </dt>
                <dd class="govuk-summary-list__value">
                  {{data['sharesIssuedDate']}}
                </dd>
                <dd class="govuk-summary-list__actions">
                  <a class="govuk-link" href="#">Change<span class="govuk-visually-hidden"> issue date</span></a>
                </dd>
              </div>
            {% endif %}
        </dl>

        <form method="post" novalidate>
          <input type="hidden" name="answers-checked" value="true">
          <button type="submit" class="govuk-button" data-module="govuk-button">
            Continue
          </button>
        </form>
      </div>
    </div>

{% endblock %}
