{# Set which global nav link to highlight #}
{% set globalNavSection = 'find-someone' %}

{# Set which primary nav tab to highlight #}
{% set primaryNavSection = 'personal' %}

{% extends "./layout.njk" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    
    {% if data['scenario'] == "TS1" %}
     {% include './partials/name/TS1.njk' %}
    {% elseif data['scenario'] == "TS2" %}
     {% include './partials/name/TS2.njk' %}
    {% elseif data['scenario'] == "TS3" %}
     {% include './partials/name/TS3.njk' %}
    {% else %}
      {% include './partials/name/mabel.njk' %}
    {% endif %}

    <form method="post">

    {% from "govuk/components/radios/macro.njk" import govukRadios %}

    {{ govukRadios({
      classes: "govuk-radios--inline",
      name: "needIDV",
      fieldset: {
        legend: {
          text: "Do you need to ask security questions?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--m"
        }
      },
      
      items: [
        {
          value: "yes",
          text: "Yes"
        },
        {
          value: "no",
          text: "No"
        }
      ]
    }) }}

    {{ govukButton({
      text: "Confirm"
    }) }}

    </form>
  </div>
</div>

{% endblock %}
