{# Set which global nav link to highlight #}
{% set globalNavSection = 'find-someone' %}

{# Set which primary nav tab to highlight #}
{% set primaryNavSection = 'personal' %}

{% extends "./layout.njk" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    
    {% if data['scenario'] == "TS1" %}
     {% include './partials/name/TS1.njk' %}
    {% elseif data['scenario'] == "TS2" %}
     {% include './partials/name/TS2.njk' %}
    {% elseif data['scenario'] == "TS3" %}
     {% include './partials/name/TS3.njk' %}
    {% else %}
      {% include './partials/name/mabel.njk' %}
    {% endif %}

    <a href="security-check" class="govuk-button">Confirm</a>
  </div>
</div>

{% endblock %}
