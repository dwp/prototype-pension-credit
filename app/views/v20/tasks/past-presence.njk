{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Nationality" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <h1 class="govuk-heading-l">Past presence</h1>

        <div class="govuk-body">
            Use Searchlight to check where the claimant has lived.
        </div>

        <form method="post">

        <div class="govuk-form-group">
          <fieldset class="govuk-fieldset">

            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h2 class="govuk-fieldset__heading">
                Has the claimant lived outside of the Common Travel Area since {{data['immigrationDateString']}}?
              </h2>
            </legend>


            <div class="govuk-radios" data-module="govuk-radios">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="pastPresence" name="pastPresence" type="radio" value="yes"
                  {% if data['pastPresence'] == 'yes' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="pastPresence">
                  Yes
                </label>
              </div>

              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="pastPresence2" name="pastPresence" type="radio" value="no"
                  {% if data['pastPresence'] == 'no' %}
                    checked="checked"
                  {%endif%}
                >
                <label class="govuk-label govuk-radios__label" for="pastPresence2">
                  No
                </label>
              </div>


          </fieldset>
        </div>

        <button type="submit" class="govuk-button" data-module="govuk-button">
            Continue
        </button>

        </form>

</div>
</div>

{% endblock %}