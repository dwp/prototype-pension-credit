
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Your savings and investments on " + data['backdateDateString'] %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service – your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">


        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <form method="post" >
            <div class="govuk-form-group govuk-!-padding-top-7">
                <h1 class="govuk-heading-l">
                    Your savings and investments on <span class="no-wrap">{{data['backdateDateString']}}</span>
                </h1>

                <div class="govuk-body">
                    <p>
                        We need to know how much money you and your partner have in savings and investments. This includes any money you have in:
                        <ul class="govuk-list govuk-list--bullet">
                            {% for item in data['capitalTypes'] %}
                            <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                    </p>
                </div>

                <h2 class="govuk-heading-m">How much money did you have in savings or investments on <span class="no-wrap">{{data['backdateDateString']}}</span>?</h2>

                <div class="govuk-input__wrapper">
                    <div class="govuk-input__prefix" aria-hidden="true">£</div>
                    <input class="govuk-input govuk-input--width-10" id="tamTotal" name="tamTotal" type="number" spellcheck="false">
                </div>
            
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
