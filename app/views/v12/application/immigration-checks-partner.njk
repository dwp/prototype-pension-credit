                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="liveWork" name="liveWork" type="radio" value="Yes">
                    <label class="govuk-label govuk-radios__label" for="liveWork">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="liveWork-2" name="liveWork" type="radio" value="No">
                    <label class="govuk-label govuk-radios__label" for="liveWork-2">
                    No
                    </label>
                </div>

                </div>
            </fieldset>
            </div>

            <div class="govuk-form-group govuk-!-margin-top-7>
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                <h1 class="govuk-fieldset__heading">
                  Has your partner lived permanently in the UK for the last 6 months?
                </h1>
                </legend>

                <div class="govuk-radios govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="liveWork" name="liveWork" type="radio" value="Yes">
                    <label class="govuk-label govuk-radios__label" for="liveWork">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="liveWork-2" name="liveWork" type="radio" value="No">
                    <label class="govuk-label govuk-radios__label" for="liveWork-2">
                    No
                    </label>
                </div>

                </div>
            </fieldset>
