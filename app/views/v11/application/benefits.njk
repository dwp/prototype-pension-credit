
{% set serviceName = 'Apply for Pension Credit' %}
{% extends "/layouts/main.html" %}

{% set pageName = "Which of these benefits or payments do you get from DWP?" %}

{% block beforeContent %}
{{ govukPhaseBanner({
  tag: {
    text: "Beta"
  },
  html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
}) }}
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p><a href="javascript:history.back()" class="govuk-back-link govuk-!-static-margin-0">Back</a></p>

        <form method="post">
          <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" role="group">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-heading-l">
                      <span class="govuk-caption-l">Protecting your identity</span>
                      Which of these benefits do you get?
                    </h1>
                          <p class="govuk-hint">Select all benefits that you are getting.</p>
                </legend>

                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting" name="benefitsGetting" type="checkbox" value="SP">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting">
                      State Pension
                    </label>
                  </div>
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting-3" name="benefitsGetting" type="checkbox" value="AA">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting-3">
                      Attendance Allowance
                    </label>
                  </div>
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting-4" name="benefitsGetting" type="checkbox" value="CA">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting-4">
                      Carer's Allowance
                    </label>
                  </div>
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting-5" name="benefitsGetting" type="checkbox" value="PIP">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting-5">
                      Personal Independance Payment (PIP)
                    </label>
                  </div>
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting-6" name="benefitsGetting" type="checkbox" value="DLA">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting-6">
                      Disability Living Allowance
                    </label>
                  </div>
                  <div class="govuk-checkboxes__divider">or</div>
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="benefitsGetting-5" name="benefitsGetting" type="checkbox" value="none" data-behaviour="exclusive">
                    <label class="govuk-label govuk-checkboxes__label" for="benefitsGetting-5">
                    None of these
                    </label>
                  </div>
                </div>
            </fieldset>
          </div>
          <div class="govuk-form-group">
              <button type="submit" class="govuk-button" data-module="govuk-button">
                  Continue
              </button>
          </div>
        </form>
    </div>
</div>

{% endblock %}
