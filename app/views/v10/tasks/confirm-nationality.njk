{# Set which global nav link to highlight #}
{% set globalNavSection = 'tasks' %}

{% extends "../layout.njk" %}

{% set pageName = "Confirm nationality" %}

{% block content %}
<div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% include '../partials/name/eric.njk' %}
        <p><a href="javascript:history.back()" class="govuk-back-link">Back</a></p>

        <h1 class="govuk-heading-l">Confirm nationality</h1>

        <div class="govuk-body">
         Check if this information matches the Home Office data in Searchlight.
        </div>

        <div class="govuk-group">
          <dl class="govuk-summary-list govuk-!-margin-bottom-7">
            <div class="govuk-summary-list__row">
              <dt class="govuk-summary-list__key">
            Nationality
              </dt>
              <dd class="govuk-summary-list__value">
                Spanish
              </dd>
            </div>
        </div>

        <form method="post">
            <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" aria-describedby="changedName-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                <h2 class="govuk-fieldset__heading">
                    Does this information match Searchlight?
                </h2>
                    </legend>


                <div class="govuk-radios govuk-radios--inline" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="confirmNationality" name="confirmNationality" type="radio" value="yes"
                    {%if data['confirmNationality']=="yes"%}checked="checked"{%endif%}>
                    <label class="govuk-label govuk-radios__label" for="confirmNationality">
                    Yes
                    </label>
                </div>
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="confirmNationality-2" name="confirmNationality" type="radio" value="no"
                    {%if data['confirmNationality']=="no"%}checked="checked"{%endif%}>
                    <label class="govuk-label govuk-radios__label" for="confirmNationality-2">
                    No
                    </label>
                </div>
                </div>
            </fieldset>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

        </form>


</div>
</div>

{% endblock %}
